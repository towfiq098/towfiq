#include<stdio.h>
struct Student{
    int id;
    char name[50];
    int age;
};
int main(){
    struct Student s[3],temp;
    int i,j;
    printf("Enter info of 3 students:\n");
    for(i=0;i<3;i++){
        printf("ID:"); scanf("%d",&s[i].id);
        printf("Name:"); scanf("%s",s[i].name);
        printf("Age:"); scanf("%d",&s[i].age);
    }
    for(i=0;i<2;i++){
        for(j=i+1;j<3;j++){
            if(s[i].age>s[j].age){ 
                temp=s[i];
                s[i]=s[j];
                s[j]=temp;
            }
        }
    }
    printf("\nSorted by age:\n");
    for(i=0;i<3;i++)
        printf("%d %s %d\n",s[i].id,s[i].name,s[i].age);
    return 0;
}
