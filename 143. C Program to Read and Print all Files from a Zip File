#include<stdio.h>
#include<dirent.h>
#include<string.h>
int main(){
    DIR *d;
    struct dirent *dir;
    char folder[100];
    printf("Enter folder name containing extracted zip files:");
    scanf("%s",folder);
    d=opendir(folder);
    if(d==NULL){
        printf("Could not open folder.\n");
        return 1;
    }
    printf("\nReading all files in folder '%s':\n\n", folder);
    while((dir=readdir(d))!=NULL){
        if(strcmp(dir->d_name,".")==0||strcmp(dir->d_name,"..") ==0)
            continue;
        char filepath[150];
        snprintf(filepath,sizeof(filepath),"%s/%s",folder,dir->d_name);

        FILE *f=fopen(filepath,"r");
        if(f){
            char ch;
            printf("---- %s ----\n", dir->d_name);
            while((ch=fgetc(f))!=EOF){
                putchar(ch);
            }
            printf("\n\n");
            fclose(f);
        } else {
            printf("Could not open file %s\n", dir->d_name);
        }
    }
    closedir(d);
    return 0;
}
