#include<stdio.h>
#include<string.h>
int main(){
    char filename[50], pattern[50], line[256];
    FILE *fp;
    printf("Enter file name:");
    scanf("%s",filename);
    printf("Enter pattern to search:");
    scanf("%s",pattern);
    fp=fopen(filename,"r");
    if(fp==NULL){
        printf("Error opening file.\n");
        return 1;
    }
    printf("Lines containing the pattern:\n");
    while(fgets(line,sizeof(line),fp)){
        if(strstr(line,pattern)){
            printf("%s",line);
        }
    }
    fclose(fp);
    return 0;
}
