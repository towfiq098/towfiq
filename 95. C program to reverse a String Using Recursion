#include<stdio.h>
#include<string.h>
void reverse(char str[],int i,int len){
    if(i>=len/2)
        return;
    char temp = str[i];
    str[i] = str[len - i - 1];
    str[len - i - 1] = temp;
    reverse(str, i + 1, len);
}
int main(){
    char str[100];
    printf("Enter a string:");
    scanf("%s",str);
    reverse(str,0,strlen(str));
    printf("Reversed string: %s\n",str);
    return 0;
}
