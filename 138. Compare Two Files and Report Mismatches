#include<stdio.h>
#include<stdlib.h>
int main(){
    FILE *f1,*f2;
    char file1[50],file2[50];
    char ch1,ch2;
    int pos=1,mismatch=0;
    printf("Enter first file name:");
    scanf("%s",file1);
    printf("Enter second file name:");
    scanf("%s",file2);
    f1=fopen(file1,"r");
    f2=fopen(file2,"r");
    if(f1==NULL||f2==NULL){
        printf("Error opening files.\n");
        return 1;
    }
    while((ch1=fgetc(f1))!=EOF&&(ch2=fgetc(f2))!=EOF){
        if(ch1!=ch2){
            printf("Mismatch at position %d:%c!=%c\n",pos,ch1,ch2);
            mismatch++;
        }
        pos++;
    }
    if(mismatch==0&&(feof(f1)&&feof(f2))){
        printf("Files are identical.\n");
    } else if(mismatch==0){
        printf("Files differ in length.\n");
    }
    fclose(f1);
    fclose(f2);
    return 0;
}
